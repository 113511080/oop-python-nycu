import add_path
import pytest
import mit_ocw_exercises.lec10_complexity_part1 as lec10

def test_linear_search():
    assert lec10.linear_search([1,2,3,4], 3) == 2
    assert lec10.linear_search([1,2,3,4], 5) == -1
    assert lec10.linear_search([], 5) == -1
    assert lec10.linear_search([1,2,3,4], 1) == 0
    assert lec10.linear_search([1,2,3,4], 4) == 3

def test_search():
    assert lec10.search([1,2,3,4], 3) == 2
    assert lec10.search([1,2,3,4], 5) == -1
    assert lec10.search([], 5) == -1
    assert lec10.search([1,2,3,4], 1) == 0
    assert lec10.search([1,2,3,4], 4) == 3

def test_intersect():
    assert lec10.intersect([1,2,3], [3,4,5]) == [3]
    assert lec10.intersect([1,2,3], [4,5,6]) == []
    assert lec10.intersect([], [4,5,6]) == []
    assert lec10.intersect([1,2,3], []) == []
    assert lec10.intersect([1,2,3], [1,2,3]) == [1,2,3]